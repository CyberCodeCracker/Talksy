{
  "openapi": "3.0.1",
  "info": {
    "title": "OpenAPI Specification",
    "description": "OpenApi documentation for Talksy API",
    "termsOfService": "https://cybercodecracker.github.io/portfolio/terms",
    "contact": {
      "name": "Talksy API",
      "url": "https://cybercodecracker.github.io/portfolio/",
      "email": "contact@amouri-coding.com"
    },
    "license": {
      "name": "License",
      "url": "https://cybercodecracker.github.io/portfolio/license"
    },
    "version": "0.1"
  },
  "servers": [{ "url": "http://localhost:8080", "description": "Local ENV" }],
  "security": [{ "BearerAuth": [] }],
  "tags": [
    { "name": "Authentication", "description": "Authentication API" },
    { "name": "User", "description": "User API" },
    { "name": "Chat", "description": "Chat API" },
    { "name": "Message", "description": "Message API" }
  ],
  "paths": {
    "/api/v1/messages/upload-media": {
      "post": {
        "tags": ["Message"],
        "operationId": "uploadMedia",
        "parameters": [
          {
            "name": "chat-id",
            "in": "query",
            "required": true,
            "schema": { "type": "integer", "format": "int64" }
          }
        ],
        "requestBody": {
          "content": {
            "multipart/form-data": {
              "schema": {
                "required": ["file"],
                "type": "object",
                "properties": {
                  "file": { "type": "string", "format": "binary" }
                }
              }
            }
          }
        },
        "responses": { "201": { "description": "Created" } }
      }
    },
    "/api/v1/messages/save-message": {
      "post": {
        "tags": ["Message"],
        "operationId": "saveMessage",
        "requestBody": {
          "content": {
            "application/json": {
              "schema": { "$ref": "#/components/schemas/MessageRequest" }
            }
          },
          "required": true
        },
        "responses": { "201": { "description": "Created" } }
      }
    },
    "/api/v1/chats/create-chat": {
      "post": {
        "tags": ["Chat"],
        "operationId": "createChat",
        "parameters": [
          {
            "name": "sender-id",
            "in": "query",
            "required": true,
            "schema": { "type": "integer", "format": "int64" }
          },
          {
            "name": "recipient-id",
            "in": "query",
            "required": true,
            "schema": { "type": "integer", "format": "int64" }
          }
        ],
        "responses": {
          "201": {
            "description": "Created",
            "content": {
              "application/json": {
                "schema": { "$ref": "#/components/schemas/ChatResponse" }
              }
            }
          }
        }
      }
    },
    "/api/v1/auth/register": {
      "post": {
        "tags": ["Authentication"],
        "operationId": "register",
        "requestBody": {
          "content": {
            "application/json": {
              "schema": { "$ref": "#/components/schemas/RegistrationRequest" }
            }
          },
          "required": true
        },
        "responses": { "201": { "description": "Created" } }
      }
    },
    "/api/v1/auth/refresh": {
      "post": {
        "tags": ["Authentication"],
        "operationId": "refresh",
        "requestBody": {
          "content": {
            "application/json": {
              "schema": { "$ref": "#/components/schemas/RefreshRequest" }
            }
          },
          "required": true
        },
        "responses": {
          "200": {
            "description": "OK",
            "content": {
              "application/json": {
                "schema": {
                  "$ref": "#/components/schemas/AuthenticationResponse"
                }
              }
            }
          }
        }
      }
    },
    "/api/v1/auth/login": {
      "post": {
        "tags": ["Authentication"],
        "operationId": "login",
        "requestBody": {
          "content": {
            "application/json": {
              "schema": { "$ref": "#/components/schemas/AuthenticationRequest" }
            }
          },
          "required": true
        },
        "responses": {
          "200": {
            "description": "OK",
            "content": {
              "application/json": {
                "schema": {
                  "$ref": "#/components/schemas/AuthenticationResponse"
                }
              }
            }
          }
        }
      }
    },
    "/api/v1/users/me/update-profile": {
      "patch": {
        "tags": ["User"],
        "operationId": "udpateProfileInfo",
        "requestBody": {
          "content": {
            "application/json": {
              "schema": { "$ref": "#/components/schemas/UpdateProfileRequest" }
            }
          },
          "required": true
        },
        "responses": { "204": { "description": "No Content" } }
      }
    },
    "/api/v1/users/me/update-password": {
      "patch": {
        "tags": ["User"],
        "operationId": "updatedPassword",
        "requestBody": {
          "content": {
            "application/json": {
              "schema": { "$ref": "#/components/schemas/UpdatePasswordRequest" }
            }
          },
          "required": true
        },
        "responses": { "204": { "description": "No Content" } }
      }
    },
    "/api/v1/users/me/reactivate": {
      "patch": {
        "tags": ["User"],
        "operationId": "reactivate",
        "responses": { "204": { "description": "No Content" } }
      }
    },
    "/api/v1/users/me/deactivate": {
      "patch": {
        "tags": ["User"],
        "operationId": "deactivate",
        "responses": { "204": { "description": "No Content" } }
      }
    },
    "/api/v1/messages": {
      "patch": {
        "tags": ["Message"],
        "operationId": "setMessagesToSeen",
        "parameters": [
          {
            "name": "chat-id",
            "in": "query",
            "required": true,
            "schema": { "type": "integer", "format": "int64" }
          }
        ],
        "responses": { "202": { "description": "Accepted" } }
      }
    },
    "/api/v1/messages/{chat-id}/{message-id}": {
      "patch": {
        "tags": ["Message"],
        "operationId": "editMessage",
        "parameters": [
          {
            "name": "chat-id",
            "in": "path",
            "required": true,
            "schema": { "type": "integer", "format": "int64" }
          },
          {
            "name": "message-id",
            "in": "path",
            "required": true,
            "schema": { "type": "integer", "format": "int64" }
          }
        ],
        "requestBody": {
          "content": {
            "application/json": {
              "schema": { "$ref": "#/components/schemas/MessageUpdateRequest" }
            }
          },
          "required": true
        },
        "responses": { "202": { "description": "Accepted" } }
      }
    },
    "/api/v1/users/me": {
      "get": {
        "tags": ["User"],
        "operationId": "getCurrentUser",
        "responses": {
          "200": {
            "description": "OK",
            "content": {
              "application/json": {
                "schema": { "$ref": "#/components/schemas/UserResponse" }
              }
            }
          }
        }
      }
    },
    "/api/v1/users/get-users": {
      "get": {
        "tags": ["User"],
        "operationId": "getUsers",
        "responses": {
          "200": {
            "description": "OK",
            "content": {
              "application/json": {
                "schema": {
                  "type": "array",
                  "items": { "$ref": "#/components/schemas/UserResponse" }
                }
              }
            }
          }
        }
      }
    },
    "/api/v1/messages/chat/{chat-id}": {
      "get": {
        "tags": ["Message"],
        "operationId": "getMessages",
        "parameters": [
          {
            "name": "chat-id",
            "in": "path",
            "required": true,
            "schema": { "type": "integer", "format": "int64" }
          }
        ],
        "responses": {
          "200": {
            "description": "OK",
            "content": {
              "application/json": {
                "schema": {
                  "type": "array",
                  "items": { "$ref": "#/components/schemas/MessageResponse" }
                }
              }
            }
          }
        }
      }
    },
    "/api/v1/chats/get-chats": {
      "get": {
        "tags": ["Chat"],
        "operationId": "getAllChatsByRecipientId",
        "responses": {
          "200": {
            "description": "OK",
            "content": {
              "application/json": {
                "schema": {
                  "type": "array",
                  "items": { "$ref": "#/components/schemas/ChatResponse" }
                }
              }
            }
          }
        }
      }
    },
    "/api/v1/auth/confirm-account": {
      "get": {
        "tags": ["Authentication"],
        "operationId": "confirmAccount",
        "parameters": [
          {
            "name": "token",
            "in": "query",
            "required": true,
            "schema": { "type": "string" }
          }
        ],
        "responses": { "200": { "description": "OK" } }
      }
    },
    "/api/v1/users/me/delete": {
      "delete": {
        "tags": ["User"],
        "operationId": "delete",
        "responses": { "204": { "description": "No Content" } }
      }
    }
  },
  "components": {
    "schemas": {
      "MessageRequest": {
        "type": "object",
        "properties": {
          "content": { "type": "string" },
          "senderId": { "type": "integer", "format": "int64" },
          "receiverId": { "type": "integer", "format": "int64" },
          "messageType": {
            "type": "string",
            "enum": ["TEXT", "IMAGE", "AUDIO", "VIDEO", "VOICE"]
          },
          "chatId": { "type": "integer", "format": "int64" }
        }
      },
      "ChatResponse": {
        "type": "object",
        "properties": {
          "id": { "type": "integer", "format": "int64" },
          "name": { "type": "string" },
          "unreadChatsCount": { "type": "integer", "format": "int64" },
          "lastMessage": { "type": "string" },
          "lastMessageTime": { "type": "string", "format": "date-time" },
          "senderId": { "type": "integer", "format": "int64" },
          "recipientId": { "type": "integer", "format": "int64" },
          "recipientOnline": { "type": "boolean" }
        }
      },
      "RegistrationRequest": {
        "required": ["email", "firstName", "lastName", "nickname", "password"],
        "type": "object",
        "properties": {
          "firstName": {
            "maxLength": 10,
            "minLength": 3,
            "type": "string",
            "example": "Souhail"
          },
          "lastName": {
            "maxLength": 10,
            "minLength": 3,
            "type": "string",
            "example": "Amouri"
          },
          "nickname": {
            "maxLength": 15,
            "minLength": 3,
            "type": "string",
            "example": "CoolDude"
          },
          "email": { "type": "string", "example": "souhail@gmail.com" },
          "password": {
            "maxLength": 15,
            "minLength": 8,
            "pattern": "^(?=.*[A-Za-z])(?=.*\\d)[A-Za-z\\d]{8,}$",
            "type": "string"
          }
        }
      },
      "RefreshRequest": {
        "type": "object",
        "properties": { "refreshToken": { "type": "string" } }
      },
      "AuthenticationResponse": {
        "type": "object",
        "properties": {
          "access_token": { "type": "string" },
          "refresh_token": { "type": "string" },
          "token_type": { "type": "string" }
        }
      },
      "AuthenticationRequest": {
        "required": ["email", "password"],
        "type": "object",
        "properties": {
          "email": { "type": "string", "example": "souhail@gmail.com" },
          "password": { "type": "string", "example": "password123" }
        }
      },
      "UpdateProfileRequest": {
        "required": ["firstName", "lastName", "nickname"],
        "type": "object",
        "properties": {
          "firstName": { "maxLength": 10, "minLength": 3, "type": "string" },
          "lastName": { "maxLength": 10, "minLength": 3, "type": "string" },
          "nickname": { "maxLength": 15, "minLength": 3, "type": "string" }
        }
      },
      "UpdatePasswordRequest": {
        "required": ["newPassword", "oldPassword"],
        "type": "object",
        "properties": {
          "oldPassword": { "maxLength": 15, "minLength": 8, "type": "string" },
          "newPassword": {
            "maxLength": 15,
            "minLength": 8,
            "pattern": "^(?=.*[A-Za-z])(?=.*\\d)[A-Za-z\\d]{8,}$",
            "type": "string"
          }
        }
      },
      "MessageUpdateRequest": {
        "type": "object",
        "properties": {
          "id": { "type": "integer", "format": "int64" },
          "content": { "type": "string" }
        }
      },
      "UserResponse": {
        "type": "object",
        "properties": {
          "id": { "type": "integer", "format": "int64" },
          "firstName": { "type": "string" },
          "lastName": { "type": "string" },
          "lastSeen": { "type": "string", "format": "date-time" },
          "online": { "type": "boolean" }
        }
      },
      "MessageResponse": {
        "type": "object",
        "properties": {
          "id": { "type": "integer", "format": "int64" },
          "message": { "type": "string" },
          "type": {
            "type": "string",
            "enum": ["TEXT", "IMAGE", "AUDIO", "VIDEO", "VOICE"]
          },
          "state": { "type": "string", "enum": ["SENT", "SEEN"] },
          "senderId": { "type": "integer", "format": "int64" },
          "recipientId": { "type": "integer", "format": "int64" },
          "createdAt": { "type": "string", "format": "date-time" },
          "media": { "type": "string", "format": "byte" }
        }
      }
    },
    "securitySchemes": {
      "BearerAuth": {
        "type": "http",
        "in": "header",
        "scheme": "bearer",
        "bearerFormat": "JWT"
      }
    }
  }
}
